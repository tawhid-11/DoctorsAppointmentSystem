@model DoctorsAppointmentSystem.Models.PatientIndexViewModel

<div class="container mt-4">
    <h2 class="mb-4">Book an Appointment</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Book Available Slots -->
    <div class="row">
        @foreach (var slot in Model.Slots)
        {
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@slot.SlotTime</h5>
                        <form asp-action="Book" method="post">
                            <input type="hidden" name="slotId" value="@slot.SlotTemplateId" />
                            <input type="date" name="appointmentDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control mb-2" />
                            <button type="submit" class="btn btn-primary btn-sm w-100">Book</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />

    <!-- List Booked Appointments -->
    <h2 class="mt-4">Your Appointments</h2>
    <table class="table table-bordered mt-2">
        <thead>
            <tr>
                <th>Date</th>
                <th>Slot</th>
                <th>Doctor</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Appointments)
            {
                <tr>
                    <td>@app.AppointmentDate.ToString("yyyy-MM-dd")</td>
                    <td>@app.SlotTime</td>
                    <td>@app.DoctorName</td>
                    <td>@app.Status</td>
                    <td>
                        @if (app.Status == "Booked")
                        {
                            <form asp-action="Cancel" method="post">
                                <input type="hidden" name="appointmentId" value="@app.AppointmentId" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
